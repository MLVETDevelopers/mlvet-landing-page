---
import Layout from '../layouts/Layout.astro'
import DownloadButton, {
	DownloadButtonTypes,
} from '../components/DownloadButton.astro'
---

<Layout title="MLVET">
	<main
		class="h-full w-full flex items-center xs:justify-center flex-col xs:p-4 sm:p-6 md:p-16 pt-12 sm:pt-32 gap-y-32 sm:gap-y-24"
	>
		<img src="./mlvet_logo_transparent.png" class="object-cover md:w-3/4" />
		<div class="flex flex-col gap-y-6 sm:flex-row gap-x-4">
			<DownloadButton type={DownloadButtonTypes.WINDOWS} />
			<DownloadButton type={DownloadButtonTypes.MAC} />
			<DownloadButton type={DownloadButtonTypes.MAC_ARM} />
			<DownloadButton type={DownloadButtonTypes.LINUX} />
		</div>
	</main>
</Layout>
