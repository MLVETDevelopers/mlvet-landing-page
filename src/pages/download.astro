---
// Imports
import Layout from "../layouts/Layout.astro"
import CMS from "../../lib/cms";
import DownloadBlock from "../components/DownloadBlock.astro";

const downloadPageContent = await CMS.downloadPage();
---

<Layout title="MLVET | Download">
		<div class="flex flex-col bg-grey-600 w-screen min-h-screen">
			<div class="flex flex-1 flex-col justify-center items-center">
				<p class="font-medium text-yellow-500 text-5xl">Download MLVET</p>
				<div class="flex flex-col md:flex-row gap-20 pt-24">
					{downloadPageContent.attributes.osDownloadUrl.map((osLink) => 
						<DownloadBlock downloadData={osLink} />
					)}
				</div>
			</div>
		</div>
</Layout>
