---
//Imports
import { ImageData } from '../../shared/sharedTypes'
import PrimaryButton from './PrimaryButton.astro'

interface HeroProps {
    tagline: string
    downloadButtonText: string
    heroImage: ImageData[]
}

const { tagline, downloadButtonText, heroImage } = Astro.props as HeroProps
const image = [...heroImage].pop()?.attributes
---

<div
    class="flex flex-row flex-wrap w-full bg-grey-600 text-yellow-500 p-10 pb-20 min-h-96 gap-5 justify-around [clip-path:inset(0_-100vmax)] [box-shadow:0_0_0_100vmax_#3A3A3A]"
>
    <div class="flex flex-col flex-1 justify-around md:basis-1/3">
        <div class="w-full text-6xl">{tagline}</div>
        <div class="pt-5">
            <PrimaryButton
                class="flex-none"
                text={downloadButtonText}
                link="/download"
            />
        </div>
    </div>
    <div class={`flex md:flex-1 justify-end md:h-full h-auto w-full`}>
        <!-- <img class="object-contain object-center rounded-lg" src={image?.url ?? ''} /> -->
    </div>
</div>
